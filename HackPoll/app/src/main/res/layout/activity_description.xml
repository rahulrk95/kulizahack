<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.anoop.hackpoll.DescriptionActivity">

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/question"
        android:padding="8dp"
        android:text="sbdabsjdnjasndjnasdkm"
        android:textStyle="bold"
        android:textSize="@dimen/abc_text_size_medium_material"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/description"
        android:padding="8dp"
        android:text="sabdhhbajndksamldmasmdkmsakdmaksmdkmaskdmkasmdkmaks"
        android:layout_marginTop="10dp"
        android:textStyle="italic"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/divider"
            android:layout_alignBottom="@+id/upvote"
            android:layout_centerInParent="true"
            />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/upvote"
            android:layout_toLeftOf="@+id/divider"
            android:paddingRight="15dp"
            android:src="@drawable/ic_action_good"
            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/downvote"
            android:layout_toRightOf="@+id/divider"
            android:paddingLeft="15dp"
            android:src="@drawable/ic_action_bad"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/num_upVotes"
            android:paddingRight="10dp"
            android:text="19234"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/upvote"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/num_downVotes"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/downvote"
            android:paddingLeft="10dp"
            android:text="19234"/>
    </RelativeLayout>


</LinearLayout>
